<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Horloge et Pomodoro</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 0;
            padding: 0;
            color: #000; /* Noir pour le texte */
            background-color: #ffeb3b; /* Jaune par défaut */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
        .container {
            background-color: rgba(0, 0, 0, 0.7); /* Noir avec transparence */
            padding: 20px;
            margin: 50px auto;
            width: 90%;
            max-width: 600px;
            border-radius: 10px;
            color: #fff; /* Blanc pour le texte interne */
        }
        .clock {
            font-size: 48px;
            margin-bottom: 20px;
            color: #4caf50; /* Vert pour l'horloge */
        }
        .pomodoro {
            margin-top: 30px;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            margin: 5px;
            color: #fff;
            background-color: #4caf50; /* Vert pour les boutons */
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #388e3c; /* Vert foncé au survol */
        }
        input[type="file"] {
            margin-top: 20px;
            color: #000;
        }
        #timer {
            font-size: 32px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="clock" id="clock">00:00:00</div>
        <div class="pomodoro">
            <button onclick="startPomodoro()">Démarrer Pomodoro</button>
            <button onclick="resetPomodoro()">Réinitialiser</button>
            <div id="timer">25:00</div>
        </div>
        <div class="background-upload">
            <label for="background-input">Changer l'arrière-plan :</label>
            <input type="file" id="background-input" accept="image/*" onchange="changeBackground(event)">
        </div>
    </div>
    <script>
        // Horloge
        function updateClock() {
            const now = new Date();
            const time = now.toLocaleTimeString();
            document.getElementById('clock').textContent = time;
        }
        setInterval(updateClock, 1000);

        // Minuteur Pomodoro
        let timer;
        function startPomodoro() {
            let timeLeft = 25 * 60;
            document.getElementById('timer').textContent = formatTime(timeLeft);
            clearInterval(timer);
            timer = setInterval(() => {
                timeLeft--;
                document.getElementById('timer').textContent = formatTime(timeLeft);
                if (timeLeft <= 0) clearInterval(timer);
            }, 1000);
        }
        function resetPomodoro() {
            clearInterval(timer);
            document.getElementById('timer').textContent = '25:00';
        }
        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = seconds % 60;
            return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
        }

        // Changer l'arrière-plan
        function changeBackground(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.body.style.backgroundImage = `url(${e.target.result})`;
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
</body>
</html>
